@using CSETWebCore.Reports.Models
@model CrrViewModel
@{
    ViewData["Title"] = "CRR Report - CSET";
}

<link rel="stylesheet" href="wwwroot/css/CRRResults.css" />

@{
    async void RenderResultsSummary()
    {
        <div class="parent">
            <div>
                <div>
                    <h3 class="depiction-title">Summary of CRR Results</h3>
                </div>
                <br />
                <div class="chart-title">
                    <div>
                        Maturity Indicator Level By Domain
                    </div>
                </div>
            </div>
            <div class="CrrResultsBody">
                <div class="crrResultsTable">
                    @for (int i = 0; i < @Model?.crrResultsData.crrDomains.Count; ++i)
                    {
                        <div class="crrResultsTableRow">
                            <div class="crrResultsDomainCell">
                                <div class="crrResultsTableDomainName">
                                    @Model?.crrResultsData.crrDomains[i].domainName
                                </div>
                            </div>
                            <div class="grid-line rb-l mil-1-grid"></div>
                            <div class="grid-line rb-l mil-1-grid"></div>
                            <div class="grid-line rb-l mil-1-grid"></div>
                            <div class="grid-line rb-d mil-1-grid"></div>
                            <div class="grid-line rb-d mil-upper-grid"></div>
                            <div class="grid-line rb-d mil-upper-grid"></div>
                            <div class="grid-line rb-d mil-upper-grid"></div>
                            <div class="crrResultsProgressBar" style="@Html.Raw("width:" + Model?.crrResultsData.crrDomains[i].widthValpx + "px;")"></div>
                        </div>
                    }
                    <div class="crrResultsTableRow crrResultsTableLabelRow crrLastResultsTableRow">
                        <div class="crrResultsLabelCell pe-2 pr-2" style="font-size: 12px; ">
                            Maturity&nbspIndicator&nbsp;Level&nbsp;&nbsp;&nbsp; <bold>0</bold>
                        </div>
                        <div class="crrTableLabel mil-1-grid"><p class="mil-number-labels">.25</p></div>
                        <div class="crrTableLabel mil-1-grid"><p class="mil-number-labels">.5</p></div>
                        <div class="crrTableLabel mil-1-grid"><p class="mil-number-labels">.75</p></div>
                        <div class="crrTableLabel mil-1-grid mil-1-override"><p class="mil-number-labels">1</p><p class="upper-mil-label-bold">MIL-1 Performed</p><p class="upper-mil-label-desc">Domain practices are being performed.</p></div>
                        <div class="crrTableLabel rb-d mil-upper-grid"><p class="mil-number-labels">2</p><p class="upper-mil-label-bold">MIL-2 Planned</p><p class="upper-mil-label-desc">Domain practices are supported by planning, policy, stakeholders, and standards.</p></div>
                        <div class="crrTableLabel rb-d mil-upper-grid"><p class="mil-number-labels">3</p><p class="upper-mil-label-bold">MIL-3 Managed</p><p class="upper-mil-label-desc">Domain practices are supported by governance and adequate resources.</p></div>
                        <div class="crrTableLabel rb-d mil-upper-grid"><p class="mil-number-labels">4</p><p class="upper-mil-label-bold">MIL-4 Measured</p><p class="upper-mil-label-desc">Domain practices are supported by measurement, monitoring, and executive oversight.</p></div>
                        <div class="crrTableLabel mil-upper-grid ccrLastLabel"><p class="mil-number-labels">5</p><p class="upper-mil-label-bold">MIL-5 Defined</p><p class="upper-mil-label-desc pe-0 pr-0">Domain practices are supported by enterprise standardization and analysis of lessons learned.</p></div>
                    </div>
                </div>
            </div>
        </div>
    }
}


<div class="container">
    @{ RenderResultsSummary(); }
</div>

<style>
    @@media print {
        @@page {
            size: A4 landscape
        }
    }

    .depiction-title {
        font-family: Arial;
        font-weight: bold;
        font-size: 18pt;
        line-height: 90%;
        margin: 0;
    }

    .chart-title {
        font-weight: 600;
        font-size: 1.3em;
        margin-left: 10em;
    }

    .domain-label {
        font-size: 0.5rem;
        font-weight: bold;
    }
</style>